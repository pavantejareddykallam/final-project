    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <style>
    .b1 {
      border: none;
      outline: none;
      border-radius: 5px;
      padding: 10px;
      color: white;
      background-color: #7bb4e3;
      border-radius: 5px;
